# Example environment configuration for numbers_bot
# Copy this file to .env and modify values as needed

# Application Environment
ENVIRONMENT=development  # development, production, testing
DEBUG=true
LOG_LEVEL=INFO

# Telegram Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=  # For production webhook mode
TELEGRAM_WEBHOOK_SECRET=  # Webhook secret token
TELEGRAM_MAX_CONNECTIONS=100

# AI Service Configuration
AI_OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
AI_MODEL=openai/gpt-4o
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048
AI_TIMEOUT=30.0
AI_MAX_RETRIES=3

# Database Configuration (for future use)
DB_URL=sqlite:///./numbers_bot.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Cache Configuration (Redis - optional)
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=3600
CACHE_MAX_CONNECTIONS=50

# Security Settings
SECURITY_SECRET_KEY=change-me-in-production-make-it-at-least-32-chars
SECURITY_RATE_LIMIT_PER_MINUTE=60
SECURITY_MAX_FILE_SIZE_MB=10

# Performance Settings
HTTP_TIMEOUT=30.0
CONNECTION_POOL_SIZE=100
MAX_CONCURRENT_REQUESTS=50
THREAD_POOL_SIZE=20